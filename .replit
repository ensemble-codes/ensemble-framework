modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hardhat Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SDK Build"

[[workflows.workflow]]
name = "Hardhat Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/contracts && npx hardhat test"

[[workflows.workflow]]
name = "SDK Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/sdk && npm run build"

[deployment]
run = ["sh", "-c", "cd packages/contracts && npx hardhat test"]
